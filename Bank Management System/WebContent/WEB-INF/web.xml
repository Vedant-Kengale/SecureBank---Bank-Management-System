<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<display-name>Bank Management System</display-name>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- Customer Servlet -->
	<servlet>
		<servlet-name>CustomerServlet</servlet-name>
		<servlet-class>com.bankmanagement.servlet.CustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CustomerServlet</servlet-name>
		<url-pattern>/customer</url-pattern>
	</servlet-mapping>

	<!-- Account Servlet -->
	<servlet>
		<servlet-name>AccountServlet</servlet-name>
		<servlet-class>com.bankmanagement.servlet.AccountServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AccountServlet</servlet-name>
		<url-pattern>/account</url-pattern>
	</servlet-mapping>

	<!-- Transaction Servlet -->
	<servlet>
		<servlet-name>TransactionServlet</servlet-name>
		<servlet-class>com.bankmanagement.servlet.TransactionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TransactionServlet</servlet-name>
		<url-pattern>/transaction</url-pattern>
	</servlet-mapping>

	<!-- Loan Servlet -->
	<servlet>
		<servlet-name>LoanServlet</servlet-name>
		<servlet-class>com.bankmanagement.servlet.LoanServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoanServlet</servlet-name>
		<url-pattern>/loan</url-pattern>
	</servlet-mapping>

	<!-- Error Pages -->
	<error-page>
		<error-code>404</error-code>
		<location>/error.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/error.jsp</location>
	</error-page>

</web-app>


